# Use cmd+option+left/right to switch between terminal tabs
# https://ghostty.org/docs/config/keybind/reference#previous_tab
keybind = cmd+option+left=previous_tab
keybind = cmd+option+right=next_tab

# Always use block cursor, disable cursor blinking
# https://github.com/ghostty-org/ghostty/discussions/3836#discussioncomment-11688264
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# Disable ligatures
# https://ghostty.org/docs/config/reference#font-feature
font-feature = -calt

# Hide macOS title bar
# https://ghostty.org/docs/config/reference#macos-titlebar-style
macos-titlebar-style = tabs

# Always save window state (position, size, tabs, etc)
# https://ghostty.org/docs/config/reference#window-save-state
window-save-state = always
