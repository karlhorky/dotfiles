{
  "workbench.startupEditor": "newUntitledFile",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  // "prettier.eslintIntegration": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "editor.folding": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#303030",
    "statusBar.noFolderBackground": "#222225",
    "statusBar.debuggingBackground": "#511f1f",
    "editor.lineHighlightBackground": "#2f2f2f",
    // Use no-unused-vars from ESLint instead (baseConfig below)
    // "editorUnnecessaryCode.border": "#ff0000"
  },
  // "vim.useSystemClipboard": true, "vim.debug.loggingLevel":
  // "debug", Fix moving down full lines on word wrapped lines
  // https://stackoverflow.com/a/46436056/1268612
  // "vim.normalModeKeyBindingsNonRecursive": [ { "before":
  //   ["j"], "after": ["g", "j"] }, { "before": ["k"], "after":
  //     ["g", "k"] } // { //   "before": ["down"], //   "after":
  //     ["g", "j"] // }, // { //   "before": ["up"], // "after":
  //   ["g", "k"] // } ],
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  // "eslint.validate": [ "javascript", "javascriptreact", {
  //   "language": "vue", "autofix": true } ],
  "editor.tabSize": 2,
  "workbench.editor.tabSizing": "shrink",
  "window.newWindowDimensions": "maximized",
  "workbench.editor.showIcons": false,
  "explorer.confirmDragAndDrop": false,
  "editor.glyphMargin": false,
  "window.clickThroughInactive": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.splitSizing": "distribute",
  // "vim.mouseSelectionGoesIntoVisualMode": false,
  "prettier.singleQuote": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "rewrap.onSave": false,
  },
  "[plaintext]": {
    "files.trimTrailingWhitespace": false,
  },
  // "[html]": { "editor.defaultFormatter":
  //   "esbenp.prettier-vscode" }, "[javascript]": {
  // "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // "[javascriptreact]": { "editor.defaultFormatter":
  //   "esbenp.prettier-vscode" }, "[typescript]": {
  // "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // "[typescriptreact]": { "editor.defaultFormatter":
  //   "esbenp.prettier-vscode" }, "[jsonc]": {
  // "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // "[json]": { "editor.defaultFormatter":
  //   "esbenp.prettier-vscode" },

  "editor.codeActionsOnSave": {
    // Sort package.json keys with
    // - https://marketplace.visualstudio.com/items?itemName=unional.vscode-sort-package-json
    "source.sortPackageJson": "always",
  },

  // Commented out because JS/TS Import/Export Sorter can sort
  // the imports while also being configured to not remove unused
  // imports (see config below)
  //
  // "editor.codeActionsOnSave": [ // VS Code Organize Imports
  //   feature for sorting and consolidating imports //
  //   https://code.visualstudio.com/updates/v1_23#_javascript-and-typescript-organize-imports
  //   "source.organizeImports", // // Run ESLint --fix on the
  //   current file // //
  //   https://github.com/microsoft/vscode-eslint/blob/master/README.md#version-204
  //   "source.fixAll.eslint", // Trigger VS Code Format Document
  //   feature through rohit-gohri.format-code-action, configured
  //   above to default to Prettier //
  //   https://github.com/rohit-gohri/vscode-format-code-action#usage
  // "source.fixAll.format" ],
  "tsImportSorter.configuration.emptyLinesBetweenGroups": 0,
  "tsImportSorter.configuration.wrappingStyle": "prettier",
  "tsImportSorter.configuration.groupRules": ["^node:", {}, "^[.]", "^@/"],
  "breadcrumbs.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // "search.quickOpen.includeHistory": false
  "workbench.tree.renderIndentGuides": "none",
  // "javascript.implicitProjectConfig.checkJs": true
  // "eslint.nodePath":
  // "/Users/k/p/eslint-config-upleveled/node_modules",
  //   "eslint.options": { "configFile":
  //   "/Users/k/p/eslint-config-upleveled/index.js",
  // "resolvePluginsRelativeTo":
  // "/Users/k/p/eslint-config-upleveled/node_modules" }, Reuse
  // the search configuration
  // - https://code.visualstudio.com/updates/v1_46#_search-editor
  "search.searchEditor.reusePriorSearchConfiguration": true,
  // Use an existing Search Editor if there is one, otherwise
  // create a new one
  // - https://code.visualstudio.com/updates/v1_53#_default-search-mode
  "search.mode": "reuseEditor",
  // Don't scroll explorer tree when opening a new file
  // - https://code.visualstudio.com/updates/v1_46#_explorer-auto-reveal-focus-without-forcing-a-scroll
  "explorer.autoReveal": "focusNoScroll",
  // Use operating system clipboard, available since v1.32.0
  // Original PR:
  // - https://github.com/aioutecism/amVim-for-VSCode/pull/260
  // Release:
  // - https://github.com/aioutecism/amVim-for-VSCode/issues/276
  "amVim.useSystemClipboard": true,
  // Turn off Debug button above npm scripts in package.json
  // - https://github.com/microsoft/vscode/issues/101107#issuecomment-650106018
  "debug.javascript.codelens.npmScripts": "never",
  // Auto-close HTML / JSX tags in MDX
  // - https://github.com/silvenon/vscode-mdx/blob/master/readme.md#auto-close-tags
  // - https://github.com/formulahendry/vscode-auto-close-tag
  "auto-close-tag.activationOnLanguage": ["mdx"],
  "errorLens.onSave": true,
  "errorLens.onSaveTimeout": 5000,
  "errorLens.scrollbarHackEnabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "template-string-converter.validLanguages": [
    "typescript",
    "javascript",
    "typescriptreact",
    "javascriptreact",
  ],
  "template-string-converter.addBracketsToProps": true,
  "template-string-converter.autoRemoveTemplateString": true,
  "editor.inlineSuggest.enabled": true,
  // Instead disable Tab as keybinding for accepting widget
  // suggestions "editor.suggest.selectionMode": "never",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true,
    "yaml": true,
    "css": true,
    "javascript": true,
    "typescript": true,
    "typescriptreact": true,
    "mdx": true,
    "sql": true,
  },
  "editor.wordBasedSuggestions": "off",
  "editor.snippetSuggestions": "none",
  // Disable Emmet suggestions
  "emmet.showExpandedAbbreviation": "never",
  "extensions.ignoreRecommendations": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.scrollback": 100000,
  "editor.stickyScroll.enabled": true,
  "workbench.tree.enableStickyScroll": true,
  "eslint.runtime": "node",
  // "stylelint.configOverrides": { "ignoreFiles": [ // All
  //   normal .cjs files "**/*.cjs", // .cjs files starting with
  //     a dot eg. .eslintrc.cjs "**/.*.cjs" ] },
  "stylelint.validate": ["css", "less", "scss", "postcss", "tailwindcss"],
  "redhat.telemetry.enabled": false,
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "editor.lightbulb.enabled": "off",
  "editor.guides.indentation": false,
  "files.insertFinalNewline": true,
  "prettier.trailingComma": "all",
  // "editor.hover.above": false,
  "[yaml]": {
    // Disable CodeLens "GitHub Workflow - YAML Schema for GitHub
    // Workflow (github-workflow.json)" in YAML files
    "editor.codeLens": false,
  },
  "editor.linkedEditing": true,
  "workbench.editor.empty.hint": "hidden",
  // Move Activity Bar to the top
  // - https://code.visualstudio.com/updates/v1_84#_customize-activity-bar-position
  "workbench.activityBar.location": "top",
  // Highlight occurrences across multiple files
  // - https://code.visualstudio.com/updates/v1_84#_multidocument-highlighting
  "editor.occurrencesHighlight": "multiFile",
  // Enable mult-file diff editor
  // - https://code.visualstudio.com/updates/v1_85#_multifile-diff-editor
  "multiDiffEditor.experimental.enabled": true,
  "rewrap.wrappingColumn": 65,
  "rewrap.onSave": true,
  "[ignore]": {
    "rewrap.onSave": false,
  },
  "[mdx]": {
    "rewrap.onSave": false,
  },
  "workbench.editor.tabActionCloseVisibility": false,
  // Prefer jumping to source instead of TS types
  // - https://twitter.com/ambarmutha/status/1719658670592569371?t=jt6COmeaLiXJx3b9htyV3Q&s=19
  // "javascript.preferGoToSourceDefinition": true,
  // "typescript.preferGoToSourceDefinition": true
  "cSpell.enableFiletypes": ["sql"],
  "cSpell.userWords": [
    "bootcamp",
    "hackathons",
    "katas",
    "Vercel",
    "wireframes",
  ],
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "graphql",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml",
    "mdx",
  ],
  "github.copilot.advanced": {},
  "cssVariables.languages": [
    // ```
    // "astro",
    // "svelte",
    // "vue",
    // "vue-html",
    // "vue-postcss",
    // ```
    "scss",
    "postcss",
    "less",
    "css",
    "html",
    // ```
    // "javascript",
    // "javascriptreact",
    // "typescript",
    // "typescriptreact",
    // ```
    "source.css.styled",
  ],
  // Enable feature "Custom labels for open editors" for VS Code
  // 1.88+ to allow customizing tab labels to avoid the problem
  // with multiple tabs having the same label eg. `index.ts`
  // - https://code.visualstudio.com/updates/v1_88#_custom-labels-for-open-editors
  "workbench.editor.customLabels.patterns": {
    "**/index.*": "${dirname}/${filename}.${extname}",
    "**/page.tsx": "${dirname}/${filename}.${extname}",
    "**/route.ts": "${dirname}/${filename}.${extname}",
  },
  "totalTypeScript.hideAllTips": true,
  // Disable opening a file dragged and dropped into the explorer
  // - https://code.visualstudio.com/updates/v1_92#_disable-auto-file-open-on-drag-and-drop
  "explorer.autoOpenDroppedFile": false,
  // Use single-line diff view for single-line changes
  // - https://code.visualstudio.com/updates/v1_92#_true-inline-diffs
  "diffEditor.experimental.useTrueInlineView": true,
  "mdx.validate.validateFragmentLinks": "error",
  // validateFileLinks not showing diagnostics as of MDX Analyzer
  // 1.8.9
  // - https://github.com/mdx-js/mdx-analyzer/issues/465
  "mdx.validate.validateFileLinks": "error",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.svg": "default",
  },
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
  ],
  // Enable Copilot Next Edit Suggestions, introduced in VS Code
  // January 2025 (1.97)
  // - https://code.visualstudio.com/updates/v1_97#_copilot-next-edit-suggestions-preview
  "github.copilot.nextEditSuggestions.enabled": true,
  // Enable Agentic codebase search (Preview), introduced in VS
  // Code January 2025 (1.97) and renamed in VS Code February
  // 2025 (1.98)
  // - https://code.visualstudio.com/updates/v1_97#_agentic-codebase-search-preview
  // - https://code.visualstudio.com/updates/v1_98#_more-advanced-codebase-search-in-copilot-chat
  "github.copilot.chat.codesearch.enabled": true,
  // Enable Reusable Prompts (Experimental), introduced in VS
  // Code January 2025 (1.97)
  // https://code.visualstudio.com/updates/v1_97#_reusable-prompts-experimental
  "chat.promptFiles": true,
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  // Enable Copilot Chat Agent Mode, enabled in VS Code Stable in
  // VS Code March 2025 (1.99)
  // - https://code.visualstudio.com/updates/v1_99#_agent-mode-is-available-in-vs-code-stable
  "chat.agent.enabled": true,
  // Enable Copilot Chat Agent Mode Thinking Tool, introduced in
  // VS Code March 2025 (1.99)
  // - https://code.visualstudio.com/updates/v1_99#_thinking-tool-experimental
  "github.copilot.chat.agent.thinkingTool": true,
  "terminal.integrated.tabs.enabled": false,
  // Enable Inline chat V2 (Preview) and lightweight
  // hide-on-request UX, both introduced in VS Code April 2025
  // (1.100)
  // - https://code.visualstudio.com/updates/v1_100#_inline-chat-v2-preview
  "inlineChat.enableV2": true,
  "inlineChat.hideOnRequest": true,
  // Enable Copilot Agent Mode Task Lists (Experimental),
  // introduced in VS Code July 2025 (1.103)
  // - https://code.visualstudio.com/updates/v1_103#_track-progress-with-task-lists-experimental
  "chat.agent.todoList": {
    "enabled": true,
    "position": "default",
  },
  // Enable experimental Chat Sessions view, introduced in VS
  // Code August 2025 (1.104)
  // - https://code.visualstudio.com/updates/v1_104#_chat-sessions-view
  "chat.agentSessionsViewLocation": "view",
  // Hide editor tab scrollbar, introduced in VS Code August 2025
  // (1.104)
  // - https://code.visualstudio.com/updates/v1_104#_editor-tab-bar-scrollbar-visibility
  "workbench.editor.titleScrollbarVisibility": "hidden",
  "githubPullRequests.terminalLinksHandler": "github",
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "chat.tools.terminal.autoApprove": {
    "cd": true,
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "which": true,
    "basename": true,
    "dirname": true,
    "realpath": true,
    "readlink": true,
    "stat": true,
    "file": true,
    "sleep": true,
    "git status": true,
    "git log": true,
    "git show": true,
    "git diff": true,
    "pnpm list": true,
    "pnpm patch ": true,
    "pnpm patch-commit ": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": false,
    "date": true,
    "/^date\\b.*(-s|--set)\\b/": false,
    "find": true,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
    "grep": true,
    "/^grep\\b.*-(f|P)\\b/": false,
    "rg": true,
    "/^rg\\b.*-(f|P)\\b/": false,
    "sort": true,
    "/^sort\\b.*-(o|S)\\b/": false,
    "tree": true,
    "/^tree\\b.*-o\\b/": false,
    "/\\(.+\\)/": {
      "approve": false,
      "matchCommandLine": true,
    },
    "/\\{.+\\}/": {
      "approve": false,
      "matchCommandLine": true,
    },
    "/`.+`/": {
      "approve": false,
      "matchCommandLine": true,
    },
    "rm": false,
    "rmdir": false,
    "del": false,
    "Remove-Item": false,
    "ri": false,
    "rd": false,
    "erase": false,
    "dd": false,
    "kill": false,
    "ps": false,
    "top": false,
    "Stop-Process": false,
    "spps": false,
    "taskkill": false,
    "taskkill.exe": false,
    "curl": false,
    "wget": false,
    "Invoke-RestMethod": false,
    "Invoke-WebRequest": false,
    "irm": false,
    "iwr": false,
    "chmod": false,
    "chown": false,
    "Set-ItemProperty": false,
    "sp": false,
    "Set-Acl": false,
    "jq": true,
    "xargs": false,
    "eval": false,
    "Invoke-Expression": false,
    "iex": false,
    "pnpm learnfe build": {
      "approve": true,
      "matchCommandLine": true,
    },
    "pnpm learn exec playwright test": {
      "approve": true,
      "matchCommandLine": true,
    },
    "pnpm ls": {
      "approve": true,
      "matchCommandLine": true,
    },
  },
  // Show recent chat sessions in Copilot Chat empty state,
  // introduced in VS Code September 2025 (1.105)
  // - https://code.visualstudio.com/updates/v1_105#_show-recent-chat-sessions-experimental
  "chat.emptyState.history.enabled": true,
  // Disallow whitespace-only next edit suggestions, introduced
  // in VS Code September 2025 (1.105)
  // - https://code.visualstudio.com/updates/v1_105#_disallow-whitespaceonly-next-edit-suggestions
  "github.copilot.nextEditSuggestions.allowWhitespaceOnlyChanges": false,
  // Increase max requests for Agent Mode, introduced in VS Code
  // January 2025 (1.97)
  // - https://code.visualstudio.com/updates/v1_97#_agent-mode-experimental
  "chat.agent.maxRequests": 80,
  // Disable Comments view auto-opening on file with comments,
  // introduced in VS Code March 2022 (1.66)
  // - https://code.visualstudio.com/updates/v1_66#_comments-view-discoverability
  "comments.openView": "never",
  // Collapse all comments threads by default in the Comments,
  // introduced in VS Code August 2021 (1.60)
  // - https://code.visualstudio.com/updates/v1_60#_github-pull-requests-and-issues
  "githubPullRequests.commentExpandState": "collapseAll",
  // Disable comments from GitHub Pull Requests extension,
  // introduced in VS Code November 2022 (1.74)
  // - https://code.visualstudio.com/updates/v1_74#_commentsvisible
  "comments.visible": false,
  // 30s shell environment timeout to avoid timeout during VS
  // Code update, which can lead to ESLint ENOENT errors such as:
  // ```
  // Starting the server failed. Launching server using runtime node failed. Error: spawn node ENOENT
  //
  // ESLint client: couldn't create connection to server. Launching server using runtime node failed. Error: spawn node ENOENT
  //
  // Unable to resolve your shell environment in a reasonable time. Please review your shell configuration and restart.
  // ```
  //
  // ESLint Output logs show:
  // ```
  // 2025-10-16 11:48:25.322 [info] ESLint server is starting.
  // 2025-10-16 11:48:25.322 [info] ESLint server stopped.
  // 2025-10-16 11:48:25.322 [error] ESLint client: couldn't create connection to server.
  // Launching server using runtime node failed. Error: spawn node ENOENT
  // 2025-10-16 11:48:25.322 [error] Starting the server failed.
  // Launching server using runtime node failed. Error: spawn node ENOENT
  // 2025-10-16 11:48:25.322 [info] PATH environment variable is: /usr/bin:/bin:/usr/sbin:/sbin
  // ```
  // - https://github.com/microsoft/vscode-eslint/issues/1754#issuecomment-3410201863
  "application.shellEnvironmentResolutionTimeout": 30,
  // Enable Native IntelliSense in integrated terminal,
  // introduced in VS Code July 2024 (1.92) and enabled for zsh
  // in VS Code November 2024 (1.96)
  // - https://code.visualstudio.com/updates/v1_92#_vs-codenative-intellisense-for-powershell
  // - https://code.visualstudio.com/updates/v1_96#_terminal-completions-for-more-shells
  "terminal.integrated.suggest.enabled": true,
  // Always select the first terminal suggestion, introduced in
  // VS Code June 2025 (1.102)
  // - https://code.visualstudio.com/updates/v1_102#_selection-mode
  "terminal.integrated.suggest.selectionMode": "always",
  // Insert a trailing space after accepting a terminal
  // suggestion, introduced in VS Code October 2025 (1.106)
  // - https://code.visualstudio.com/updates/v1_106#:~:text=(New!),completions%20after%20accepting.
  "terminal.integrated.suggest.insertTrailingSpace": true,
  "githubPullRequests.pullBranch": "never",
  "files.associations": {
    "rc": "ini",
  },
  // Enable using Agent Skills, introduced in VS Code December
  // 2025 (1.108)
  // - https://code.visualstudio.com/updates/v1_108#_agent-skills-experimental
  "chat.useAgentSkills": true,
  // Ignore whitespace changes in Git blame, introduced in VS
  // Code December 2025 (1.108)
  // - https://code.visualstudio.com/updates/v1_108#_git-blame-information-settings
  "git.blame.ignoreWhitespace": true,
  // Disable bad default of maximizing editor groups (panes) on
  // double-click
  // - https://code.visualstudio.com/updates/v1_80#_disable-maximizing-editor-groups-on-tab-double-click
  "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "off",
}
